<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/container_scroll_view"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="bg.examples.my.androidexamples.MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_column="0"
        android:text="@string/btn_back" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView"
        android:layout_above="@+id/gridLayout"
        android:layout_toRightOf="@+id/buttonBack"
        android:layout_toEndOf="@+id/buttonBack" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonBack"
        android:columnCount="1"
        android:id="@+id/gridLayout">

        <Button
            android:layout_width="243dp"
            android:layout_height="@dimen/grid_button_height"
            android:text="Touch"
            android:id="@+id/MainMenu_btnTouchDemo"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="241dp"
            android:layout_height="@dimen/grid_button_height"
            android:text="Load From Assets"
            android:id="@+id/MainMenu_btnLoadFromAssets"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_self_call"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_button_height"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Self Call" />

        <Button
            android:id="@+id/btnLoadSaveFromFile"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_button_height"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_row="4"
            android:text="Load Save File" />

        <Button
            android:id="@+id/btn_scrollview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_button_height"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Scroll View" />

        <Button
            android:id="@+id/btn_show_more_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_button_height"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Show more Text View" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_button_height"
            android:text="New Button 9"
            android:id="@+id/button9"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_button_height"
            android:text="New Button 10"
            android:id="@+id/button10"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_button_height"
            android:text="New Button 11"
            android:id="@+id/button11"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_gravity="center_horizontal"/>

    </GridLayout>

</RelativeLayout>
</ScrollView>
