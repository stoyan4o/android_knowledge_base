<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bg.examples.my.androidexamples.PopupActicity">


    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Again"
        android:id="@+id/btnAgain"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/btnBack"
        android:layout_alignTop="@+id/btnAgain"
        android:layout_toLeftOf="@+id/btnAgain"
        android:layout_toStartOf="@+id/btnAgain" />



    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Share"
        android:id="@+id/btnShare"
        android:layout_alignTop="@+id/btnAgain"
        android:layout_toRightOf="@+id/btnAgain"
        android:layout_toEndOf="@+id/btnAgain" />
</RelativeLayout>
